<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:clickable="true"
    android:onClick="abrirAnuncio"
    android:foreground="?selectableItemBackground">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:padding="20dp"
            android:background="@drawable/background_border"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="200dp"
                android:layout_height="180dp">

                <ImageView
                    android:id="@+id/produtoImagem"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:src="@drawable/img_loading"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="#6f111111">

                    <TextView
                        android:id="@+id/produtoCategoria"
                        android:paddingLeft="4dp"
                        android:paddingRight="4dp"
                        android:paddingTop="4dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@color/colorWhite"
                        android:text="Camarão"/>

                    <TextView
                        android:id="@+id/produtoTitulo"
                        android:paddingLeft="6dp"
                        android:paddingRight="6dp"
                        android:paddingBottom="6dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:maxLines="3"
                        android:textColor="@color/colorLightGray"
                        android:text="Descrição"/>

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_marginTop="3dp"
                android:layout_width="match_parent"
                android:layout_height="14dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/productPreco"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="10sp"
                    android:gravity="left"
                    android:text="R$ 30,00 Kg"/>

                <TextView
                    android:id="@+id/produtoArmazenamento"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="10sp"
                    android:gravity="right"
                    android:text="Congelado"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="14dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/produtoTipoAgua"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="10sp"
                    android:gravity="left"
                    android:text="Água salgada"/>

                <TextView
                    android:id="@+id/produtoQuantidade"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textSize="10sp"
                    android:gravity="right"
                    android:text="Mais de 1000 kg"/>

            </LinearLayout>

            <TextView
                android:id="@+id/produtoMunicipio"
                android:layout_width="match_parent"
                android:layout_height="14dp"
                android:textSize="12sp"
                android:textColor="@color/colorGray"
                android:gravity="left"
                android:maxLines="1"
                android:text="RN - Mossoró"/>

        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="match_parent"></View>

    </LinearLayout>

    <ImageView
        android:id="@+id/anuncioPremium"
        android:visibility="gone"
        android:layout_gravity="right"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:padding="2dp"
        android:src="@drawable/icon_premium"
        android:background="@color/colorAccent"
        android:layout_alignParentRight="true"/>

    <ImageView
        android:id="@+id/anuncioDiamante"
        android:visibility="gone"
        android:layout_gravity="right"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:padding="2dp"
        android:src="@drawable/icon_diamond"
        android:tint="@color/colorWhite"
        android:background="@color/colorPrimary"
        android:layout_alignParentRight="true"/>

    <ImageView
        android:id="@+id/anuncioProdutor"
        android:visibility="gone"
        android:layout_gravity="right"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:padding="2dp"
        android:src="@drawable/icon_produtor"
        android:background="@color/colorAccent"
        android:layout_alignParentRight="true"/>

</FrameLayout>